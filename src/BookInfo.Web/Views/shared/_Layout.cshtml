<!DOCTYPE html>
<html>
<head>
    <title>Book Info: @ViewBag.Title</title>
 
    <link asp-href-include="lib/bootstrap/dist/**/*.min.css" rel="stylesheet" />
    <script asp-src-include="lib/jquery/dist/*.min.js"></script>
    <script asp-src-include="jquery-validation/dist/jquery.*.min.js"></script>
    <script asp-src-include="lib/jquery-validation-unobtrusive/dist/jquery.*.min.js"></script>
</head>
<body>
    <h1>Book Info: @ViewBag.Title</h1>
    <div class="text-danger">testing</div>
    <p>
        <a asp-controller="Home" asp-action="Index">Home</a><br />
        <a asp-controller="Book" asp-action="Index">Show all books</a><br />
        @*<a asp-controller="Book" asp-action="BooksByGenre", asp-all-route-data="@new{genre="Fantasy"}">Show fantasy books</a>*@
        @Html.ActionLink("Show fantasy books", "BooksByGenre", "Book",
            new { genre = "Fantasy"})<br />
        @Html.ActionLink("Show Historical Fiction books", "BooksByGenre", "Book",
            new { genre = "Historical Fiction" })<br />
        @Html.ActionLink("Show all authors", "Authors", "Home") @*Later, this should be in an AuthorController *@
    </p>
    @RenderBody()
</body>
</html>