<!DOCTYPE html>
<html>
<head>
    <title>Book Info: @ViewBag.Title</title>
 
    <link asp-href-include="lib/bootstrap/dist/**/*.min.css" rel="stylesheet" />
        @*
        <script asp-src-include="lib/jquery/dist/*.min.js"></script>
        <script asp-src-include="lib/jquery-validation/dist/jquery.*.min.js"></script>
        <script asp-src-include="lib/jquery-validation-unobtrusive/dist/jquery.*.min.js"></script>
        <!-- The scripts above, loaded from the wwwwroot directory, have problems. We need to use the libs from the cdn instead
             Client-side validation won't work right (or at all) without the jQyery libraries below -->
        *@
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.11.3.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.14.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>


    <style>
        body 
        {
            background-color:antiquewhite;
            padding:5px;
        }
    </style>
</head>
<body>
    <h1>Book Info: @ViewBag.Title</h1>
    <h3>Menu:</h3>
    <p>
        <a asp-controller="Home" asp-action="Index">Home</a><br />
        <a asp-controller="Book" asp-action="Index">Show all books</a><br />
        <a asp-controller="Book" asp-action="BooksByGenre" 
             asp-route-genre="Fantasy">Show fantasy books</a><br />
        <a asp-controller="Book" asp-action="BooksByGenre"
             asp-route-genre="Historical Fiction">Show historical fiction books</a><br />
        <a asp-controller="Home" asp-action="Authors">Show all authors</a><br />
    </p>
    @RenderBody()
</body>
</html>