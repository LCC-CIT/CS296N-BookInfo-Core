@model ReaderViewModel
@{
    ViewBag.Title = "Home";
}

@if (Model.Authenticated)
{
    <h3>Welcome @Model.FirstName<span> </span>@Model.LastName<span>!</span></h3>
    <br />
    <a asp-controller="Auth" asp-action="Logout">Logout</a><br />
}
else
{
    <a asp-controller="Auth" asp-action="Register">Register</a><br />
    <a asp-controller="Auth" asp-action="Login">Login</a><br />
}